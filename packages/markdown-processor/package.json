{
  "name": "@saitamau-maximum/markdown-processor",
  "version": "1.3.0",
  "private": false,
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "lint": "eslint --fix --ext .ts,.tsx src",
    "lint:check": "eslint --ext .ts,.tsx src",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "clean": "rimraf dist",
    "build": "npm run clean && tsup",
    "test": "vitest run"
  },
  "keywords": [],
  "author": "sor4chi",
  "license": "MIT",
  "dependencies": {
    "rehype-katex": "^7.0.0",
    "rehype-pretty-code": "^0.13.0",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.0",
    "remark-breaks": "^4.0.0",
    "remark-directive": "^3.0.0",
    "remark-extract-toc": "^1.1.0",
    "remark-flexible-code-titles": "^1.1.4",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "remark-mermaidjs": "^6.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.0",
    "remark-slug": "^7.0.1",
    "shiki": "^1.1.7",
    "unified": "^11.0.4"
  },
  "devDependencies": {
    "@types/hast": "^3.0.4",
    "glob": "^10.3.10",
    "rimraf": "^5.0.5"
  },
  "files": [
    "dist"
  ],
  "exports": {
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "server": [
        "./dist/server"
      ]
    }
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/saitamau-maximum/markdown.git",
    "directory": "packages/markdown-processor"
  }
}
